<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.BookInfoActivity">

    <TextView
        android:id="@+id/des_view"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scrollbars="vertical"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"/>

    <ImageView
        android:id="@+id/bookimg"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/light_grey" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/bookimg"
        app:layout_constraintTop_toTopOf="@+id/bookimg" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/bookimg"
        app:layout_constraintTop_toBottomOf="@+id/book_title" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Base.Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="false"
        android:isIndicator="true"
        app:layout_constraintBottom_toBottomOf="@+id/bookimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bookimg" />

    <TextView
        android:id="@+id/rating_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/author" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"

        android:text="@string/book_description"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookimg" />

    <TextView
        android:id="@+id/az_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/amazon_icon"
        app:layout_constraintStart_toEndOf="@+id/amazon_icon"
        app:layout_constraintTop_toTopOf="@+id/amazon_icon" />

    <TextView
        android:id="@+id/azeb_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/az_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/az_price"
        app:layout_constraintTop_toTopOf="@+id/az_price" />

    <TextView
        android:id="@+id/ch_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/chapter_icon"
        app:layout_constraintStart_toEndOf="@+id/chapter_icon"
        app:layout_constraintTop_toTopOf="@+id/chapter_icon" />

    <TextView
        android:id="@+id/cheb_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ch_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ch_price"
        app:layout_constraintTop_toTopOf="@+id/ch_price" />


    <ImageView
        android:id="@+id/amazon_icon"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:src="@drawable/amazon_icon"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="322dp"
        app:layout_constraintTop_toBottomOf="@+id/des_view"
        app:layout_constraintStart_toStartOf="@+id/des_view"/>


    <ImageView
        android:id="@+id/chapter_icon"
        android:layout_width="98dp"
        android:layout_height="47dp"
        android:src="@drawable/chapters_icon"

        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="366dp"
        app:layout_constraintTop_toBottomOf="@+id/amazon_icon"
        app:layout_constraintStart_toStartOf="@+id/des_view"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ISBN"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/bookimg"
        app:layout_constraintTop_toBottomOf="@+id/author" />

    <Button
        android:id="@+id/fav"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="Add to Favorites"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/bookimg"
        app:layout_constraintEnd_toStartOf="@+id/ratingBar"
        app:layout_constraintStart_toEndOf="@+id/bookimg"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/remove_fav"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="Remove from Favorites"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/bookimg"
        app:layout_constraintEnd_toStartOf="@+id/ratingBar"
        app:layout_constraintStart_toEndOf="@+id/bookimg"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/review"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="Write a review"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar"
        app:layout_constraintEnd_toStartOf="@+id/rating_num"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toEndOf="@+id/bookimg"
        app:layout_constraintTop_toTopOf="@+id/book_title"
        app:layout_constraintVertical_bias="0.851" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_recyclerView"
        android:layout_width="600dp"
        android:layout_height="245dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chapter_icon" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/comment_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/sortby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by:"
        app:layout_constraintBottom_toTopOf="@+id/comment_recyclerView"
        app:layout_constraintEnd_toStartOf="@+id/spinner" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Comments"
        app:layout_constraintBottom_toTopOf="@+id/comment_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
